{
  "version": 2,
  "buildCommand": "npm run build && node build-articles.js && cp -r images dist/public/ && cp -r articles .",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/blog/posts/([^/]+)",
      "dest": "/api/blog/posts/[slug].js?slug=$1"
    },
    {
      "src": "/api/blog/posts",
      "dest": "/api/blog/posts.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}